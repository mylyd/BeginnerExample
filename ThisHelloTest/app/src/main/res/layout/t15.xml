<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#aaa9a9">
            <Button
                android:id="@+id/T15_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/text_discount"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="侧栏"
                android:layout_centerVertical="true"
                android:layout_marginLeft="75dp"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="50sp"
                android:text="T15"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小车账户查询："
                android:textColor="#000"
                android:textSize="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="车号:"
                    android:textSize="38dp" />

                <Spinner
                    android:id="@+id/T15_Spinner_1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/colorAccent"
                    android:entries="@array/num"
                    android:spinnerMode="dropdown" />
                <Button
                    android:id="@+id/T15_button_chaxun_1"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="查 询"
                    android:layout_marginLeft="100dp"
                    android:textSize="36dp"
                    android:background="@drawable/buttonstyle_first"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小车账户充值："
                    android:textColor="#000"
                    android:textSize="48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="车号:"
                        android:textSize="38dp" />

                    <Spinner
                        android:id="@+id/T15_Spinner_2"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:entries="@array/num"
                        android:spinnerMode="dropdown" />
                    <EditText
                        android:id="@+id/T15_EditText"
                        android:layout_width="220dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="32dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:layout_height="60dp" />
                    <Button
                        android:id="@+id/T15_button_chaxun_2"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:text="充 值"
                        android:layout_marginLeft="100dp"
                        android:textSize="36dp"
                        android:background="@drawable/buttonstyle_first"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>