<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#88555555">
            <Button
                android:id="@+id/AccountRecharge_BackButton"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/back"
                android:background="#00555555"
                android:text="返回"
                android:layout_centerVertical="true"
                android:textSize="22sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:layout_alignLeft="@+id/text_discount"/>

            <Button
                android:id="@+id/AccountRecharge_Button"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:text="历史充值记录"
                android:textSize="24dp"
                android:background="@drawable/button_cha" />
            <TextView
                android:id="@+id/text_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="50sp"
                android:text="账  户  充  值"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/AccountRecharge_QueryButton"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
                android:text="查    询"
                android:textSize="32dp"
                android:background="@drawable/button_yayaya"/>

            <TextView
                android:id="@+id/AccountRecharge_QueryTextView"
                android:layout_width="450dp"
                android:layout_gravity="center"
                android:background="#29555555"
                android:gravity="center"
                android:textSize="28dp"
                android:layout_marginLeft="160dp"
                android:layout_height="70dp" />
            <Button
                android:id="@+id/AccountRecharge_FaZhiBack"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="110dp"
                android:text="设置阀值"
                android:textSize="24dp"
                android:background="@drawable/button_cha"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="350dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车号:"
                android:layout_gravity="center"
                android:textSize="32dp"/>

            <TextView
                android:id="@+id/AccountRecharge_CarTextView"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="34dp"
                android:hint="阀值时设定的车号"
                android:background="@drawable/view"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/AccountRecharge_RechargeEditText"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="32sp"
                android:background="#55555555"
                android:inputType="number"
                android:maxLength="4"
                android:hint="点击此处输入金额"
                android:maxLines="1"
                android:layout_marginLeft="400dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/AccountRecharge_RechargeButton"
                android:layout_width="800dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
                android:textSize="36dp"
                android:background="@color/colorPrimary"
                android:text="充      值"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>