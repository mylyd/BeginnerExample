<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#555555"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fragment_2_chaxun"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="220dp"
            android:gravity="center"
            android:textSize="28dp"
            android:background="@drawable/button_yayaya"
            android:text="查 询"
            android:layout_height="70dp" />
        <EditText
            android:id="@+id/fragment_2_EditText_chaxun"
            android:layout_width="600dp"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:background="@drawable/button_off"
            android:gravity="center"
            android:hint="提示(阀值：最低10元------最高5000元)"
            android:editable="false"
            android:textSize="28dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="220dp"
            android:gravity="center"
            android:background="@drawable/view"
            android:textSize="28dp"
            android:textColor="#000"
            android:text="车  号"/>
        <EditText
            android:id="@+id/fragment_2_chehao"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/button_off"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="7"
            android:hint="(至少6为位)"
            android:layout_gravity="center"
            android:textSize="28dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/fragment_2_text_max"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="180dp"
            android:gravity="center"
            android:background="@drawable/view"
            android:textSize="28dp"
            android:textColor="#000"
            android:text="最大金额"/>
        <EditText
            android:id="@+id/fragment_2_max"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_off"
            android:gravity="center"
            android:maxLength="4"
            android:hint="(至少2位)(元)"
            android:inputType="number"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="28dp"/>
        <TextView
            android:id="@+id/fragment_2_text_min"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:background="@drawable/view"
            android:textSize="28dp"
            android:textColor="#000"
            android:text="最小金额"/>

        <EditText
            android:id="@+id/fragment_2_min"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_off"
            android:gravity="center"
            android:hint="(至少2位)(元)"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="4"
            android:textSize="28dp" />
    </LinearLayout>
    <Button
        android:id="@+id/fragment_2_Setup"
        android:layout_width="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="设 置 账 户 阀 值"
        android:textSize="28sp"
        android:background="@drawable/button_yayaya"
        android:layout_height="70dp" />

</LinearLayout>