<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 引入空气温度布局 -->
    <RelativeLayout
        android:id="@+id/En_temperature"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:clickable="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/green">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="空气温度"
               android:textSize="36sp"
               android:paddingTop="20dp"
               android:paddingLeft="30dp"/>
           <TextView
               android:id="@+id/Text_temperature"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:textSize="50sp"
               android:text="32"
               android:background="@drawable/guide_dot_style_white"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"
               android:layout_marginBottom="5dp"
               android:gravity="center"/>
    </RelativeLayout>

    <!-- 引入空气湿度布局 -->
    <RelativeLayout
        android:id="@+id/En_humidity"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/green"
        android:layout_marginLeft="465dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="空气湿度"
            android:textSize="36sp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp" />
        <TextView
            android:id="@+id/Text_humidity"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="50sp"
            android:text="80"
            android:background="@drawable/guide_dot_style_white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- 引入光照布局 -->
    <RelativeLayout
        android:id="@+id/En_beam"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="885dp"
        android:background="@drawable/green">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="光 照"
            android:textSize="36sp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp" />
        <TextView
            android:id="@+id/Text_Light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="35"
            android:textSize="50sp"
            android:background="@drawable/guide_dot_style_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- 引入二氧化碳布局 -->
    <RelativeLayout
        android:id="@+id/En_CO2"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/green">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="二氧化碳"
            android:textSize="36sp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp" />
        <TextView
            android:id="@+id/Text_CO2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="290"
            android:textSize="50sp"
            android:background="@drawable/guide_dot_style_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- 引入PM2.5布局 -->
    <RelativeLayout
        android:id="@+id/En_PM25"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginLeft="465dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/green">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PM 2.5"
            android:textSize="36sp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp" />
        <TextView
            android:id="@+id/Text_pm25"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="900"
            android:textSize="50sp"
            android:background="@drawable/guide_dot_style_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
    </RelativeLayout>

    <!-- 引入道路状况布局-->
    <RelativeLayout
        android:id="@+id/En_road"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="885dp"
        android:background="@drawable/green">
        <TextView
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:text="道路状况"
            android:textSize="36sp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"/>
        <TextView
            android:id="@+id/Text_road"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="50sp"
            android:text="2"
            android:background="@drawable/guide_dot_style_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>